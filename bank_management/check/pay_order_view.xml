<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_pay_order_1_tree">
            <field name="name">pay_order.tree1</field>
            <field name="model">account.voucher</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Pay Order">
                    <field name="name" select="1"/>
                    <field name="journal_id"/>
                    <field name="account_id" />
                    <field name="amount"/>
                    <field name="date"/>
                    <field name="period_id"/>
                </tree>
            </field>
        </record>


        <record model="ir.ui.view" id="view_pay_order_1_form">
            <field name="name">multi.partner.receipt.form</field>
            <field name="model">account.voucher</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Customer Payment">
                    <group col="6" colspan="4">
                        <field name="partner_id"  required='1' domain="[('customer','=',True)]"/>
                        <field name="payee_id"  required='0' domain="[('partner_id','=',partner_id) ]"/>
                        <field name="journal_id" on_change= "onchange_journal_multi_partner(journal_id)"
                            domain="[('type','in',['bank', 'cash'])]"
                            widget="selection" select="1"
                            string="Payment Method" invisible="1"/>
                        <field name="amount"
                            string="Paid Amount"/>
                        <field name="date" select="1"/>
                        <field name="reference" select="1" string="Payment Ref"/>
                        <field name="name" colspan="2"/>
                        <field name="company_id" select="1" widget="selection" groups="base.group_multi_company"/>
                        <field name="account_id"
                            widget="selection" invisible="1"/>
                        <field name="pre_line" invisible="1"/>
                        <field name="type" invisible="False"/>
                        <field name="multi_partner" invisible="True"/>
                    </group>
                    <notebook colspan="4">
                        <page string="Payment Information">
                            <field name="line_cr_ids" default_get="{'journal_id':journal_id, 'type':type, 'partner_id':partner_id}" colspan="4" nolabel="1" height="140" on_change="onchange_line_ids(line_dr_ids, line_cr_ids, amount)" domain="[('voucher_id','=',False), ('partner_id','=',partner_id) ]">
                                <tree string="Invoices and outstanding transactions" editable="bottom">
                                    <field name="partner_id" domain="[('customer','=',True),('id','=',parent.partner_id)]" required="1" on_change="onchange_partner_id(partner_id, parent.journal_id, parent.amount, parent.currency_id, parent.type, invoice_id, context)"/>
                                    <field name="invoice_id" widget='many2one' domain="[('partner_id','=',partner_id), ('state','=','open')]" on_change="onchange_partner_id(partner_id, parent.journal_id, parent.amount, parent.currency_id, parent.type, invoice_id, context)"/>
                                    <field name="account_id"  groups="base.group_no_one" domain="[('type','=','receivable')]"/>
                                    <field name="date_original" readonly="1"/>
                                    <field name="date_due" readonly="1"/>
                                    <field name="amount_original" readonly="1"/>
                                    <field name="amount_unreconciled" sum="Open Balance" readonly="1"/>
                                    <field name="amount" sum="Payment"/>
                                    <field name="move_line_id" context="{'journal_id':parent.journal_id, 'partner_id':parent.partner_id}"
                                        on_change="onchange_move_line_id(move_line_id)"
                                        domain="[('account_id.type','in',('receivable','payable')), ('reconcile_id','=', False), ('partner_id','=',parent.partner_id)]" required="1"/>
                                </tree>
                            </field>
                            <field name="line_dr_ids" colspan="4" nolabel="1" attrs="{'invisible': [('pre_line','=',False)]}" default_get="{'journal_id':journal_id}" on_change="onchange_line_ids(line_dr_ids, line_cr_ids, amount)">
                                <tree string="Credits" editable="bottom">
                                    <field name="account_id"  groups="base.group_extended" domain="[('type','=','receivable')]"/>
                                    <field name="date_original"/>
                                    <field name="amount_original"/>
                                    <field name="amount" sum="Payment"/>
                                    <field name="move_line_id"/>
                                </tree>
                            </field>
                            <group col="2" colspan="3">
                                <separator string="Internal Notes" colspan="2"/>
                                <field name="narration" colspan="2" nolabel="1"/>
                            </group>
                            <group col="2" colspan="1">
                                <group col="2" colspan="1">
                                    <separator string="Payment Options" colspan="2"/>
                                    <field name="analytic_id"
                                           groups="analytic.group_analytic_accounting"/>
                                    <field name="payment_option" required="1"/>
                                    <field name="writeoff_amount"
                                           attrs="{'invisible':[('payment_option','!=','with_writeoff')]}"/>
                                    <field name="writeoff_acc_id"
                                           attrs="{'invisible':[('payment_option','!=','with_writeoff')], 'required':[('payment_option','=','with_writeoff')]}"
                                           domain="[('type','=','other')]"/>
                                    <field name="comment"
                                           attrs="{'invisible':[('payment_option','!=','with_writeoff')]}"/>
                                </group>
                                <separator string="Other Information" colspan="2"/>
                                <group col="4" colspan="1">
                                    <field name="currency_id" invisible="True"/>
                                    <field name="number"/>
                                </group>
                            </group>
                        </page>
                        <page string="Journal Items" groups="base.group_extended" attrs="{'invisible': [('state','!=','posted')]}">
                            <group col="6" colspan="4">
                                <field name="period_id"/>
                                <field name="audit"/>
                            </group>
                            <field name="move_ids" colspan="4" nolabel="1" readonly="1">
                               <tree string="Journal Items">
                                   <field name="move_id"/>
                                   <field name="ref"/>
                                   <field name="date"/>
                                   <field name="statement_id"/>
                                   <field name="account_id"/>
                                   <field name="name"/>
                                   <field name="debit"/>
                                   <field name="credit"/>
                                   <field name="state"/>
                                   <field name="reconcile_id"/>
                                   <field name="amount_currency"/>
                                   <field name="currency_id"/>
                               </tree>
                            </field> 
                        </page>
                    </notebook>
                    <group col="10" colspan="4">
                        <field name="state"/>
                        <button name="cancel_voucher" string="Cancel" states="draft,proforma"  icon="gtk-cancel"/>
                        <button name="cancel_voucher" string="Unreconcile" type="object" states="posted" icon="terp-stock_effects-object-colorize" confirm="Are you sure to unreconcile this record ?"/>
                        <button name="action_cancel_draft" type="object" states="cancel" string="Set to Draft" icon="terp-stock_effects-object-colorize"/>
                                    <!-- boton del wizard -->
                        <button name="%(wiz_pay_support)d" type='action' string='Generar Pago' icon="gtk-execute" states="draft"/>
                    </group>
                </form>
            </field>
        </record>


    <!--
    =====================================================
    Menu Principal Orden de Pago Clientes Monopartida
    =====================================================
    -->

        <record id="action_pay_order" model="ir.actions.act_window">
            <field name="name">Orden de Pago</field>
            <field name="res_model">account.voucher</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_pay_order_1_tree"/>
            <field name="domain">[('type', 'like','receipt')]</field>
            <field name="context">{'type':'receipt'}</field>
        </record>

        <record id="act_wv_pay_order_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_pay_order_1_tree"/>
            <field name="act_window_id" ref="action_pay_order"/>
        </record>
        <record id="act_wv_pay_order_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_pay_order_1_form"/>
            <field name="act_window_id" ref="action_pay_order"/>
        </record> 


        <menuitem 
            name="Orden de Pago" 
            id="menu_pay_order_general" 
            parent='account.menu_finance_receivables'
            action="action_pay_order"/>




    <!--
    =====================================================
    Orden de Pago Proveedores Monopartida
    =====================================================
    -->



        <record model="ir.ui.view" id="view_rec_order_1_form">
            <field name="name">multi.partner.payment.form</field>
            <field name="model">account.voucher</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Bill Payment">
                    <group col="6" colspan="4">
                        <field name="partner_id" required='1' domain="[('supplier','=',True)]"/>
                        <field name="payee_id"  required='0' domain="[('partner_id','=',partner_id) ]"/>
                        <field name="amount"/>
                        <field name="journal_id"
                            domain="[('type','in',['bank', 'cash'])]"
                            widget="selection"
                            on_change="onchange_journal_multi_partner(journal_id)"
                            string="Payment Method" invisible="True"/>
                        <field name="date" select="1" on_change="onchange_date_multi_partner(journal_id, date)"/>
                        <field name="reference" select="1" string="Payment Ref"/>
                        <field name="name" colspan="2"/>
                        <field name="company_id" select="1" widget="selection" groups="base.group_multi_company"/>
                        <field name="account_id"
                            widget="selection"
                            invisible="True"/>
                        <field name="pre_line" invisible="1"/>
                        <field name="type" invisible="True"/>
                        <field name="multi_partner" invisible="True"/>
                    </group>
                    <notebook colspan="4">
                        <page string="Payment Information">
                            <field name="line_dr_ids" default_get="{'journal_id':journal_id, 'type':type, 'partner_id':partner_id}" colspan="4" nolabel="1" height="140" domain="[('voucher_id','=',False), ('partner_id','=',partner_id) ]">
                                <tree string="Supplier Invoices and Outstanding transactions" editable="bottom">
                                    <field name="partner_id" domain="[('supplier','=',True), ('id','=',parent.partner_id)]" required="1" on_change="onchange_partner_id(parent.partner_id, parent.journal_id, parent.amount, parent.currency_id, parent.type, invoice_id, context)" string="Supplier"/>
                                    <field name="invoice_id" widget='many2one' domain="[('partner_id','=',partner_id), ('state','=','open')]" on_change="onchange_partner_id(partner_id, parent.journal_id, parent.amount, parent.currency_id, parent.type, invoice_id, context)"/>
                                    <field name="account_id" groups="base.group_no_one" domain="[('type','=','payable')]"/>
                                    <field name="date_original" readonly="1"/>
                                    <field name="date_due" readonly="1"/>
                                    <field name="amount_original" readonly="1"/>
                                    <field name="amount_unreconciled" sum="Open Balance" readonly="1"/>
                                    <field name="amount" sum="Payment"/>
                                    <field name="amount_residual" sum="Residual"/>
                                    <field name="move_line_id" context="{'journal_id':parent.journal_id, 'partner_id':partner_id}"
                                        on_change="onchange_move_line_id(move_line_id)"
                                        domain="[('account_id.type','=','payable'), ('reconcile_id','=', False), ('partner_id','=',partner_id)]"/>
                                </tree>
                            </field>
                            <field name="line_cr_ids" colspan="4" nolabel="1" attrs="{'invisible': [('pre_line','=',False)]}" default_get="{'journal_id':journal_id, 'partner_id':partner_id}">
                                <tree string="Credits" editable="bottom">
                                    <field name="account_id" groups="base.group_extended" domain="[('type','=','receivable')]"/>
                                    <field name="date_original"/>
                                    <field name="amount_original"/>
                                    <field name="amount" sum="Payment"/>
                                    <field name="move_line_id"/>
                                </tree>
                            </field>
                            <group col="2" colspan="3">
                                <separator string="Internal Notes" colspan="2"/>
                                <field name="narration" colspan="2" nolabel="1"/>
                            </group>
                            <group col="2" colspan="1">
                                <group col="2" colspan="1">
                                    <field name="analytic_id"
                                           groups="analytic.group_analytic_accounting"/>
                                    <separator string="Payment Options" colspan="2"/>
                                    <field name="payment_option" required="1"/>
                                    <field name="writeoff_amount"
                                           attrs="{'invisible':[('payment_option','!=','with_writeoff')]}"/>
                                    <field name="writeoff_acc_id"
                                           attrs="{'invisible':[('payment_option','!=','with_writeoff')], 'required':[('payment_option','=','with_writeoff')]}"
                                           domain="[('type','=','other')]"/>
                                    <field name="comment"
                                           attrs="{'invisible':[('payment_option','!=','with_writeoff')]}"/>

                                </group>
                                <separator string="Other Information" colspan="2"/>
                                <group col="4" colspan="1">
                                  <field name="currency_id" invisible="True"/>
                                  <field name="number"/>
                                </group>
                            </group>
                        </page>
                        <page string="Journal Items" groups="base.group_extended" attrs="{'invisible': [('state','!=','posted')]}">
                            <group col="6" colspan="4">
                                <field name="period_id"/>
                                <field name="audit"/>
                            </group>
                            <field name="move_ids" colspan="4" nolabel="1" readonly="1">
                               <tree string="Journal Items">
                                   <field name="move_id"/>
                                   <field name="ref"/>
                                   <field name="date"/>
                                   <field name="statement_id"/>
                                   <field name="partner_id"/>
                                   <field name="account_id"/>
                                   <field name="name"/>
                                   <field name="debit"/>
                                   <field name="credit"/>
                                   <field name="state"/>
                                   <field name="reconcile_id"/>
                                   <field name="amount_currency"/>
                                   <field name="currency_id"/>
                               </tree>
                            </field>
                        </page>
                    </notebook>
                    <group col="10" colspan="4">
                        <field name="state"/>
                        <button name="cancel_voucher" string="Cancel" states="draft,proforma"  icon="gtk-cancel"/>
                        <button name="cancel_voucher" string="Unreconcile" type="object" states="posted" icon="terp-stock_effects-object-colorize" confirm="Are you sure to unreconcile this record ?"/>
                        <button name="action_cancel_draft" type="object" states="cancel" string="Set to Draft" icon="terp-stock_effects-object-colorize"/>
                                    <!-- boton del wizard -->
                        <button name="%(wiz_pay_support)d" type='action' string='Generar Pago' icon="gtk-execute" states="draft"/>
                    </group>
                </form>
            </field>
        </record>



    <!--
    =====================================================
    Menu Principal Orden de Pago Proveedores Monopartida
    =====================================================
    -->

        <record id="action_rec_order" model="ir.actions.act_window">
            <field name="name">Orden de Pago</field>
            <field name="res_model">account.voucher</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_pay_order_1_tree"/>
            <field name="domain">[('type', 'like','payment')]</field>
            <field name="context">{'type':'payment'}</field>
        </record>

        <record id="act_wv_rec_order_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_pay_order_1_tree"/>
            <field name="act_window_id" ref="action_rec_order"/>
        </record>
        <record id="act_wv_rec_order_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_rec_order_1_form"/>
            <field name="act_window_id" ref="action_rec_order"/>
        </record> 


        <menuitem 
            name="Orden de Pago" 
            id="menu_rec_order_general" 
            parent='account.menu_finance_payables'
            action="action_rec_order"/>

        </data>
</openerp>

